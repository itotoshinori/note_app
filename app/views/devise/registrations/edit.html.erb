<div class="box">
    <h2>ユーザー情報編集</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
        <%= f.label :メール %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"input" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for:
        <%= resource.unconfirmed_email %>
    </div>
    <% end %>

    <div class="field">
        <%= f.label :変更後のパスワード %> <i></i><br />
        <%= f.password_field :password, autocomplete: "new-password", class:"input" %>
        <% if @minimum_password_length %><br />
        <%= @minimum_password_length %> characters minimum</em>
        <% end %>
    </div>

    <div class="field">
        <%= f.label :変更後のパスワード確認 %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"input" %>
    </div>

    <div class="field">
        <%= f.label :現状のパスワード %><br />
        <%= f.password_field :current_password, autocomplete: "current-password", class:"input" %>
    </div><br />

    <div class="actions">
        <span><%= f.submit "更新",class:"btn btn-primary" %> <a href="#"
                onClick="history.back(); return false;">もどる</a></span>
    </div>
    <% end %>
    <%= render partial: 'common/link' %>
</div>